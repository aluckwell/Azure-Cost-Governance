{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "STO04_Storage_Account_has_SFTP_enabled",
    "mode": "All",
    "properties": {
        "description": "Highlights Storage Accounts with SFTP Enabled. SFTP has a flat monthly cost over $200",
        "metadata": {
            "category": "Cost Comply"
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts"
                    },
                    {
                        "field": "Microsoft.Storage/storageAccounts/isSftpEnabled",
                        "equals": "true"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        },
        "parameters": {
            "effect": {
                "type": "String",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit",
                "metadata": {
                    "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
                    "displayName": "Effect"
                }
            }
        }
    }
}