{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "STO01_Allowed_Storage_Account_Tiers_Redundancy_Tiers",
    "mode": "All",
    "properties": {
        "description": "This policy defines the allowed Storage Account Redundancy Tiers within the assigned scope.",
        "metadata": {
            "category": "Cost Comply"
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts"
                    },
                    {
                        "field": "Microsoft.Storage/storageAccounts/sku.name",
                        "notIn": "[parameters('AllowedStorageAccountRedundancyTiers')]"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        },
        "parameters": {
            "effect": {
                "type": "String",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit",
                "metadata": {
                    "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
                    "displayName": "Effect"
                }
            },
            "AllowedStorageAccountRedundancyTiers": {
                "type": "Array",
                "allowedValues": [
                    "Standard_LRS",
                    "Standard_ZRS",
                    "Standard_GRS",
                    "Standard_GZRS",
                    "Standard_RAGRS",
                    "Standard_RAGZRS",
                    "Premium_LRS",
                    "Premium_ZRS"
                ],
                "defaultValue": [
                    "Standard_LRS"
                ],
                "metadata": {
                    "description": "Specify the allowed Storage Account Redundancy Tiers",
                    "displayName": "Storage Account: Allowed SKUs"
                }
            }
        }
    }
}