{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "AGW06_Maximum_Application_Gateway_Auto_Scaling_Instances",
    "mode": "All",
    "properties": {
        "description": "Sets the maximum number of permitted Instances for Application Gateway Auto-Scaling. Works for minimum and maximum instance counts.",
        "metadata": {
            "category": "Cost Comply"
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Network/applicationGateways"
                    },
                    {
                        "field": "Microsoft.Network/applicationGateways/sku.name",
                        "in": [
                            "Standard_v2",
                            "WAF_v2"
                        ]
                    },
                    {
                        "anyOf": [
                            {
                                "field": "Microsoft.Network/applicationGateways/autoscaleConfiguration.minCapacity",
                                "greater": "[parameters('AppGatewayMinInstanceThreshold')]"
                            },
                            {
                                "field": "Microsoft.Network/applicationGateways/autoscaleConfiguration.maxCapacity",
                                "greater": "[parameters('AppGatewayMaxInstanceThreshold')]"
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        },
        "parameters": {
            "effect": {
                "type": "String",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit",
                "metadata": {
                    "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
                    "displayName": "Effect"
                }
            },
            "AppGatewayMinInstanceThreshold": {
                "type": "Integer",
                "defaultValue": 1,
                "metadata": {
                    "description": "Minimum Application Gateway instance count threshold for auto-scaling. If the minimum instances exceed this value, the policy will flag the App Gateway.",
                    "displayName": "Application Gateway: Minimum Instance Count Threshold"
                }
            },
            "AppGatewayMaxInstanceThreshold": {
                "type": "Integer",
                "defaultValue": 2,
                "metadata": {
                    "description": "Maximum Application Gateway instance count threshold for auto-scaling. If the maximum instances exceed this value, the policy will flag the App Gateway.",
                    "displayName": "Application Gateway: Maximum Instance Count Threshold"
                }
            }
        }
    }
}