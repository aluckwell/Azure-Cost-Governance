{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "STO03_Allowed_Storage_Account_Blob_Access_Tiers",
    "mode": "All",
    "properties": {
        "description": "This policy defines the allowed Storage Account Access Tiers within the assigned scope.",
        "metadata": {
            "category": "Cost Comply"
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts"
                    },
                    {
                        "field": "Microsoft.Storage/storageAccounts/accessTier",
                        "notIn": "[parameters('AllowedStorageAccountAccessTiers')]"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        },
        "parameters": {
            "effect": {
                "type": "String",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit",
                "metadata": {
                    "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
                    "displayName": "Effect"
                }
            },
            "AllowedStorageAccountAccessTiers": {
                "type": "Array",
                "allowedValues": [
                    "Hot",
                    "Cool",
                    "Cold"
                ],
                "defaultValue": [
                    "Hot"
                ],
                "metadata": {
                    "description": "Specify the allowed Storage Account Access Tiers",
                    "displayName": "Storage Account: Allowed Access Tiers"
                }
            }
        }
    }
}