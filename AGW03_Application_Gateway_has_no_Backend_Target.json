{
  "properties": {
    "displayName": "Application Gateway has no backend Targets",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "An Application Gateway with no Backend Targets indicates Application Gateway isn't used or needed",
    "parameters": {
      "effect": {
        "type": "String",
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Audit",
        "metadata": {
          "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
          "displayName": "Effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/applicationGateways"
          },
          {
            "field": "Microsoft.Network/applicationGateways/backendAddressPools[*].backendAddresses[*]",
            "exists": "false"
          },
          {
            "field": "Microsoft.Network/applicationGateways/backendAddressPools[*].backendIPConfigurations[*]",
            "exists": "false"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}