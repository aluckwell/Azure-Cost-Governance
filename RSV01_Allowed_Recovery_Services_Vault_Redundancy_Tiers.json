{
    "properties": {
        "displayName": "Allowed Recovery Services Vault Redundancy Tiers",
        "policyType": "Custom",
        "mode": "Indexed",
        "description": "Sets the allowed Recovery Services Vault Redundancy Tiers within the assigned scope.",
        "metadata": {
            "category": "Azure Cost Comply"
        },
        "parameters": {
            "RecoveryServicesRedundancy": {
                "type": "Array",
                "metadata": {
                    "displayName": "Allowed Recovery Services Redundancy",
                    "description": "Recovery Services Vault Redundancy requirement"
                },
                "allowedValues": [
                    "LocallyRedundant",
                    "ZoneRedundant",
                    "GeoRedundant"
                ],
                "defaultvalue": [
                    "LocallyRedundant"
                ]
            },
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "This parameter lets you choose the effect of the policy. If you choose Audit (default), the policy will only audit resources for compliance. If you choose Deny, the policy will deny the creation of non-compliant resources. If you choose Disabled, the policy will not enforce compliance (useful, for example, as a second assignment to ignore a subset of non-compliant resources in a single resource group)."
                },
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.RecoveryServices/Vaults"
                    },
                    {
                        "field": "Microsoft.RecoveryServices/vaults/redundancySettings.standardTierStorageRedundancy",
                        "notIn": "[parameters('RecoveryServicesRedundancy')]"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}