{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "DSK01_Allowed_Disk_SKUs_for_environment",
    "mode": "All",
    "properties": {
        "description": "Sets which disk SKUs are permitted within the assigned scope.",
        "metadata": {
            "category": "Cost Comply"
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Compute/disks"
                    },
                    {
                        "field": "Microsoft.Compute/disks/sku.name",
                        "notIn": "[parameters('AllowedDiskSKUs')]"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        },
        "parameters": {
            "AllowedDiskSKUs": {
                "type": "Array",
                "metadata": {
                    "displayName": "Disk: Allowed SKUs",
                    "description": "The list of allowed Disk SKUs"
                },
                "defaultValue": [
                    "Standard_LRS"
                ],
                "allowedValues": [
                    "Standard_LRS",
                    "StandardSSD_LRS",
                    "Premium_LRS",
                    "PremiumV2_LRS",
                    "UltraSSD_LRS",
                    "StandardSSD_ZRS",
                    "Premium_ZRS"
                ]
            },
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "This parameter lets you choose the effect of the policy. If you choose Audit (default), the policy will only audit resources for compliance. If you choose Deny, the policy will deny the creation of non-compliant resources. If you choose Disabled, the policy will not enforce compliance (useful, for example, as a second assignment to ignore a subset of non-compliant resources in a single resource group)."
                },
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        }
    }
}