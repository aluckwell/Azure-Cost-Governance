{
    "properties": {
      "displayName": "Allowed Application Gateway Tiers",
      "policyType": "Custom",
      "mode": "Indexed",
      "description": "This policy defines the allowed Application Gateway Tiers within the assigned scope.",
      "parameters": {
        "effect": {
          "type": "String",
          "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Audit",
          "metadata": {
            "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
            "displayName": "Effect"
          }
        },
        "skuList": {
          "type": "Array",
          "allowedValues": [
            "Basic",
            "Standard_v2",
            "WAF_v2"
          ],
          "defaultValue": [
            "Basic"
          ],
          "metadata": {
            "description": "Specify the allowed Application Gateway Tiers",
            "displayName": "SKU List"
          }
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Network/applicationGateways"
            },
            {
              "field": "Microsoft.Network/applicationGateways/sku.name",
              "notIn": "[parameters('skuList')]"
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }
