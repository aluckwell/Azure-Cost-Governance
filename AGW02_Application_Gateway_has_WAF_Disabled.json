{
    "properties": {
      "displayName": "Application Gateway has WAF SKU but WAF is disabled",
      "policyType": "Custom",
      "mode": "Indexed",
      "description": "Highlights when Application has WAF SKU, but the WAF is disabled",
      "parameters": {
        "effect": {
          "type": "String",
          "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Audit",
          "metadata": {
            "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
            "displayName": "Effect"
          }
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Network/applicationGateways"
            },
            {
              "field": "Microsoft.Network/applicationGateways/sku.name",
              "equals": "WAF_v2"
            },
            {
              "field": "Microsoft.Network/applicationGateways/webApplicationFirewallConfiguration.enabled",
              "equals": "false"
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }
  