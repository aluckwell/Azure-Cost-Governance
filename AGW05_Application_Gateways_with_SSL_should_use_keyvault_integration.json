{
    "properties": {
      "displayName": "Application Gateway is not using Key Vault for SSL certificates",
      "policyType": "Custom",
      "mode": "Indexed",
      "description": "Highlights when Application Gateway is not using Key Vault integration for SSL certificates, or has SSL certificates installed locally.",
      "parameters": {
        "effect": {
          "type": "String",
          "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Audit",
          "metadata": {
            "description": "Specify the effect of the policy. Options are Audit, Deny, or Disabled.",
            "displayName": "Effect"
          }
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Network/applicationGateways"
            },
            {
              "anyOf": [
                {
                  "field": "Microsoft.Network/applicationGateways/sslCertificates.keyVaultSecretId",
                  "exists": "false"
                },
                {
                  "field": "Microsoft.Network/applicationGateways/sslCertificates.data",
                  "exists": "true"
                }
              ]
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }
  